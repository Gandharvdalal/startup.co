<% include partials/header %>


<div class="container px-lg-5">
    <header class="jumbotron">
        <div class="container ">
             <h1>Welcome to LINNO</h1>
             <p>View dope startups from all over the world</p>
             <p>
                 <a class="btn btn-primary btn-large" href="./startups/new">ADD YOUR STARTUP</a>
            </p>
        </div>    
    </header>
    <div class="row " style="display:flex; flex-wrap:wrap;">
        <% startups.forEach(function(startup){ %>
            <div class="col-6 col-md-4">    
            
                <div class="col py-3 px-lg-5 border bg-light">
                    <img src="<%= startup.image %>">
                
                <div class="caption"> 
                    <h4><%= startup.name %></h4>  
                </div>  
                <p>
                    <a href="/startups/<%= startup._id %>" class="btn btn-primary">more info</a>
                </p>  

                </div>

            </div>       
    

        <%}); %>
    </div> 
</div>    

<% include partials/footer %>

